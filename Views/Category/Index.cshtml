@model IEnumerable<Demo3.Data.Entities.Category>

@{
    ViewData["Title"] = "Categories";
}

<h2>Categories</h2>

<form asp-controller="Category" asp-action="Index" method="get">
    <p>
        Search by name: <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" />
        <input type="submit" value="Search" class="btn btn-default" />
    </p>
</form>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm })
            </th>
            <th>Category ID</th>
            <th>Name</th>
            <th>Category Summary</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            @foreach (var category in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.CategoryId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.CategoryId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.CategoryId })
                    </td>
                    <td>@category.CategoryId</td>
                    <td>@category.Name</td>
                    <td>@category.CategorySummary</td>
                </tr>
            }
    </tbody>
</table>
